{
    "version": 2,
    "builds": [
        {
            "src": "api/lambda.php",
            "use": "vercel-php@0.7.4"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "api/lambda.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "LOG_CHANNEL": "stderr"
    },
    "buildCommand": "composer install --no-dev --optimize-autoloader --no-interaction && npm run build"
}
