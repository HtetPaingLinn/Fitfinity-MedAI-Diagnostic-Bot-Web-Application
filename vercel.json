{
    "functions": {
        "api/lambda.php": {
            "runtime": "vercel-php@0.7.4"
        }
    },
    "routes": [
        {
            "src": "/(css|js|images)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "api/lambda.php"
        }
    ],
    "buildCommand": "composer install --no-dev --optimize-autoloader --no-interaction --ignore-platform-reqs && npm run build"
}
